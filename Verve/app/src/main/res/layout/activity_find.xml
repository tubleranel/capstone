<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".View.FindActivity">

	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/findbg"
			android:id="@+id/img_bg"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="0dp" app:srcCompat="@mipmap/ic_menuwhite"
			android:id="@+id/btn_sidemenu2"
			app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/guideline32"
			app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>

	<android.support.constraint.Guideline android:layout_width="wrap_content"
										  android:layout_height="wrap_content"
										  android:id="@+id/guideline44"
										  android:orientation="horizontal"
										  app:layout_constraintGuide_percent="0.07"/>

	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline45"
										  android:orientation="horizontal" app:layout_constraintGuide_percent="0.12"/>


	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/bottom_navi"
			android:id="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:paddingLeft="-100dp"
			android:paddingRight="-100dp"
			android:paddingTop="-100dp"
			app:layout_constraintTop_toTopOf="@+id/guideline34" android:scaleType="fitXY"
			android:cropToPadding="false" android:adjustViewBounds="false"/>

	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline34"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.925"/>

	<TextView
			android:text="FIND"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:letterSpacing="0.1"
			android:shadowRadius="7"
			android:shadowColor="@color/LightGray"
			android:shadowDx="6"
			android:shadowDy="6"
			android:id="@+id/txt_find" android:textStyle="bold"
			android:textSize="32sp" android:textColor="@color/White"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline44"
			app:layout_constraintBottom_toTopOf="@+id/guideline45"
			app:layout_constraintStart_toStartOf="@+id/guideline47"
	/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline46"
										  android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline47"
										  android:orientation="vertical" app:layout_constraintGuide_percent="0.07"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline48"
										  android:orientation="vertical" app:layout_constraintGuide_percent="0.92"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="42dp"
			app:layout_constraintEnd_toEndOf="@+id/imageView9"
			app:layout_constraintStart_toStartOf="@+id/imageView9"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginTop="8dp"
			android:id="@+id/linearLayout" android:layout_marginBottom="2dp">

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_margin="3dp"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_find_green"
				android:id="@+id/img_find"
				android:background="@null"
				android:layout_weight="1"
				android:paddingBottom="2dp"
				android:scaleType="fitCenter"/>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_margin="3dp"
				android:scaleType="fitCenter"
				android:background="@null"
				android:paddingBottom="2dp"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_medicine_black"
				android:id="@+id/img_reminders"
				android:layout_weight="1"/>

		<ImageButton
				android:layout_width="wrap_content"

				android:scaleType="fitCenter"
				android:background="@null"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_vervelogoblack"
				android:id="@+id/img_home"
				android:layout_weight="1"/>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_margin="3dp"
				android:scaleType="fitCenter"
				android:background="@null"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_profile_black"
				android:id="@+id/img_profile"
				android:layout_weight="1"/>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_margin="3dp"
				android:scaleType="fitCenter"
				android:background="@null"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_message_black"
				android:id="@+id/img_messages"
				android:layout_weight="1"/>
	</LinearLayout>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline49"
										  android:orientation="horizontal" app:layout_constraintGuide_percent="0.35"/>
	<android.support.v7.widget.CardView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toStartOf="@+id/guideline46"
			app:layout_constraintStart_toStartOf="@+id/guideline47"
			app:layout_constraintBottom_toTopOf="@+id/guideline49" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="@+id/guideline45" app:cardCornerRadius="10dp" app:cardElevation="6dp"
			android:id="@+id/cardview_doctor">
		<LinearLayout
				android:orientation="vertical"
				android:layout_margin="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:text="Doctors"
					android:letterSpacing="0.02"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/txt_doctors" android:textSize="18sp"
					android:textStyle="bold"/>
			<View android:background="@color/LineDarkGreen"
				  android:layout_width="29dp"
				  android:layout_height="2dp"
				  android:textAlignment="inherit"
				  android:foregroundGravity="left"
				  android:id="@+id/horizontalLineview"/>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">


				<TextView
						android:text="25"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" android:id="@+id/txt_doctornum" android:layout_weight="1"
						android:textStyle="bold" android:textSize="55sp"/>
				<TextView
						android:text="CURRENTLY ONLINE"
						android:layout_width="match_parent"
						android:layout_gravity="center"
						android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
						android:textSize="13sp"/>
			</LinearLayout>
			<TextView
					android:text="around you"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/txt_aroundyou" android:textSize="12sp"/>

		</LinearLayout>
	</android.support.v7.widget.CardView>
	<ImageButton
			android:layout_width="0dp"
			android:layout_height="wrap_content" app:srcCompat="@drawable/opaque_drugstores"
			android:id="@+id/imageButton2"
			android:background="@null" app:layout_constraintEnd_toStartOf="@+id/guideline48"
			app:layout_constraintStart_toStartOf="@+id/guideline46"
			android:layout_marginTop="10dp"
			app:layout_constraintTop_toTopOf="@+id/cardview_doctor"
			android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

</android.support.constraint.ConstraintLayout>